= render '/partial/header'

.content
  .post
    .container.single-article
      .post-header
        ul.breadcrumb
          li.breadcrumb-item: a href="#" 最新消息
          li.breadcrumb-item: a href="#" 故事
        h2.post-title= zh_lorem_sentence
        .post-meta
          span.post-date 2015.7.23
          span.post-tag-title 標籤：
          - (rand(5) + 1).times do |i|
            a.post-tag href="#"= zh_lorem_words(rand(5) + 1)
      .post-content.article
        img src="http://placehold.it/900x600"
        - 5.times do |i|
          p= zh_lorem_paragraphs(2)
      .post-footer
        .post-share
          span.post-share-title 分享：
          a.post-share-btn.icon-facebook href="#"
          a.post-share-btn.icon-twitter href="#"
          a.post-share-btn.icon-plurk href="#"
          a.post-share-btn.icon-line href="#"
          / img.post-fb-like src="/images/fb-like.png"
        .pager
          a.pager-item.prev href="#": .pager-title 上一篇
          a.pager-item.pager-item_return href="#" 返回文章列表
          a.pager-item.next href="#": .pager-title 下一篇

  .comments
    .container.single-article
      h3.comments-title 留言
      .fb-comments data-href="http://iing.tw/" data-width="100%" data-numposts="5"

  .related-posts
    .container.single-article
      h3.related-posts-title 相關文章
      .related-post-list
        a.related-post href="#"
          img.related-post-img src="http://placehold.it/300x200"
          h4.related-post-title= zh_lorem_sentence
          span.related-post-category href="#" 故事
